<view class='addContainer'>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='title'>
      <input name="title" focus='true' type='text' placeholder='标题' />
    </view>
    <view class='content'>
      <textarea name="content" placeholder='你想说什么？' maxlength='-1'></textarea>
    </view>
    <view class="btn">
      <button form-type="submit" type='primary'>submit</button>
      <button form-type="reset">reset</button>
    </view>
  </form>
</view>